{
    "name": "vantage",
    "displayName": "Vantage Image Compare",
    "publisher": "vantage-rd",
    "repository": "https://github.com/lizhogn/vantage",
    "description": "Synchronized image comparison with overlay support",
    "version": "1.3.0",
    "icon": "media/icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vantage.start",
        "onCommand:vantage.compareImages",
        "onCommand:vantage.startPairedComparison",
        "onCommand:vantage.sidebarStartPairedComparison",
        "onCommand:vantage.pairedNext",
        "onCommand:vantage.pairedPrevious",
        "onCommand:vantage.sidebarSetPath",
        "onCommand:vantage.sidebarSetFilterPattern",
        "onCommand:vantage.sidebarClearFilterPattern",
        "onCommand:vantage.sidebarOpenInEditor",
        "onCommand:vantage.sidebarRefresh",
        "onCommand:vantage.sidebarRevealInExplorer",
        "onCommand:vantage.sidebarCopyPath",
        "onCommand:vantage.sidebarOpenNative",
        "onView:vantage-sidebar"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vantage.start",
                "title": "Vantage: Start"
            },
            {
                "command": "vantage.compareImages",
                "title": "Vantage: Compare Images"
            },
            {
                "command": "vantage.startPairedComparison",
                "title": "Vantage: Start Paired Comparison"
            },
            {
                "command": "vantage.sidebarStartPairedComparison",
                "title": "Vantage: Start Paired Comparison (Selected Folders)",
                "icon": "$(combine)"
            },
            {
                "command": "vantage.pairedNext",
                "title": "Vantage: Next Matched Pair"
            },
            {
                "command": "vantage.pairedPrevious",
                "title": "Vantage: Previous Matched Pair"
            },
            {
                "command": "vantage.sidebarSetPath",
                "title": "Vantage: Set Sidebar Path",
                "icon": "$(folder-opened)"
            },
            {
                "command": "vantage.sidebarOpenInEditor",
                "title": "Vantage: Open in Editor",
                "icon": "$(play)"
            },
            {
                "command": "vantage.sidebarRefresh",
                "title": "Vantage: Refresh Sidebar",
                "icon": "$(refresh)"
            },
            {
                "command": "vantage.sidebarSetFilterPattern",
                "title": "Vantage: Set Sidebar Filter Pattern",
                "icon": "$(regex)"
            },
            {
                "command": "vantage.sidebarClearFilterPattern",
                "title": "Vantage: Clear Sidebar Filter Pattern",
                "icon": "$(clear-all)"
            },
            {
                "command": "vantage.selectImage1",
                "title": "Vantage: Select Image 1"
            },
            {
                "command": "vantage.selectImage2",
                "title": "Vantage: Select Image 2"
            },
            {
                "command": "vantage.selectImage3",
                "title": "Vantage: Select Image 3"
            },
            {
                "command": "vantage.selectImage4",
                "title": "Vantage: Select Image 4"
            },
            {
                "command": "vantage.selectImage5",
                "title": "Vantage: Select Image 5"
            },
            {
                "command": "vantage.selectImage6",
                "title": "Vantage: Select Image 6"
            },
            {
                "command": "vantage.selectImage7",
                "title": "Vantage: Select Image 7"
            },
            {
                "command": "vantage.selectImage8",
                "title": "Vantage: Select Image 8"
            },
            {
                "command": "vantage.selectImage9",
                "title": "Vantage: Select Image 9"
            },
            {
                "command": "vantage.cycleImage",
                "title": "Vantage: Cycle Image"
            },
            {
                "command": "vantage.cycleImagePrevious",
                "title": "Vantage: Cycle Image Previous"
            },
            {
                "command": "vantage.sidebarRevealInExplorer",
                "title": "Reveal in Explorer"
            },
            {
                "command": "vantage.sidebarCopyPath",
                "title": "Copy Path"
            },
            {
                "command": "vantage.sidebarOpenNative",
                "title": "Open with Default App"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "vantage.compareImages",
                    "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|webp|bmp|svg)$/i",
                    "group": "2_workspace"
                }
            ],
            "view/title": [
                {
                    "command": "vantage.sidebarSetPath",
                    "when": "view == vantage-sidebar",
                    "group": "navigation@1"
                },
                {
                    "command": "vantage.sidebarStartPairedComparison",
                    "when": "view == vantage-sidebar",
                    "group": "navigation@2"
                },
                {
                    "command": "vantage.sidebarOpenInEditor",
                    "when": "view == vantage-sidebar",
                    "group": "navigation@3"
                },
                {
                    "command": "vantage.sidebarRefresh",
                    "when": "view == vantage-sidebar",
                    "group": "navigation@4"
                },
                {
                    "command": "vantage.sidebarSetFilterPattern",
                    "when": "view == vantage-sidebar",
                    "group": "navigation@5"
                },
                {
                    "command": "vantage.sidebarClearFilterPattern",
                    "when": "view == vantage-sidebar && vantage.sidebarFilterActive",
                    "group": "navigation@6"
                }
            ],
            "view/item/context": [
                {
                    "command": "vantage.sidebarOpenInEditor",
                    "when": "view == vantage-sidebar",
                    "group": "1_compare@1"
                },
                {
                    "command": "vantage.sidebarStartPairedComparison",
                    "when": "view == vantage-sidebar && viewItem == folder",
                    "group": "1_compare@2"
                },
                {
                    "command": "vantage.sidebarRevealInExplorer",
                    "when": "view == vantage-sidebar",
                    "group": "2_files@1"
                },
                {
                    "command": "vantage.sidebarOpenNative",
                    "when": "view == vantage-sidebar && viewItem == image",
                    "group": "2_files@2"
                },
                {
                    "command": "vantage.sidebarCopyPath",
                    "when": "view == vantage-sidebar",
                    "group": "3_copy@1"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vantage-container",
                    "title": "Vantage",
                    "icon": "media/icon.png"
                }
            ]
        },
        "views": {
            "vantage-container": [
                {
                    "id": "vantage-sidebar",
                    "name": "Vantage",
                    "icon": "media/icon.png"
                }
            ]
        },
        "keybindings": [
            {
                "command": "vantage.selectImage1",
                "key": "alt+1",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage2",
                "key": "alt+2",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage3",
                "key": "alt+3",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage4",
                "key": "alt+4",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage5",
                "key": "alt+5",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage6",
                "key": "alt+6",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage7",
                "key": "alt+7",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage8",
                "key": "alt+8",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.selectImage9",
                "key": "alt+9",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.cycleImage",
                "key": "alt+tab",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.cycleImagePrevious",
                "key": "shift+alt+tab",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.pairedNext",
                "key": "ctrl+alt+right",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.pairedPrevious",
                "key": "ctrl+alt+left",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.pairedNext",
                "key": "ctrl+shift+pagedown",
                "when": "webviewFocus"
            },
            {
                "command": "vantage.pairedPrevious",
                "key": "ctrl+shift+pageup",
                "when": "webviewFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "typescript": "^5.1.3"
    }
}
